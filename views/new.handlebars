<div class="container mt-3">
  <div class="row mt-3">
    <div class="col-6 m-auto">
      <div class="card card-body">
        <h4 class="text-center">請輸入你的支出</h4>
        {{> message}}
        <h6>* 為必填欄位</h6>
        <form action="/records" method="POST">
          <div class="form-group">
            <label for="name">* 名稱 :</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="請輸入名稱">
          </div>
          <div class="form-group">
            <label for="date">* 日期 :</label>
            <input type="date" id="date" name="date" class="form-control">
          </div>
          <div class="form-group">
            <label for="category">* 類別 :</label>
            <div class="input-group">
              <select class="form-control" name="category">
                <option value="餐飲食品">餐飲食品</option>
                <option value="交通出行">交通出行</option>
                <option value="家居物業">家居物業</option>
                <option value="休閒娛樂">休閒娛樂</option>
                <option value="其他">其他</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="merchant">商家 :</label>
            <input type="text" id="merchant" name="merchant" class="form-control" placeholder="請輸入商家名稱">
          </div>
          <div class="form-group">
            <label for="amount">* 金額 :</label>
            <input type="text" id="amount" name="amount" class="form-control" placeholder="請輸入金額">
          </div>
          <button type="submit" class="btn btn-outline-primary btn-block">新增支出</button>
          <a href="/" class="btn btn-outline-secondary btn-block mt-2">返回</a>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById("date").valueAsDate = new Date()
</script>