<div class="container mt-3">
  <div class="row mt-3">
    <div class="col-6 m-auto">
      <div class="card card-body">
        <h4 class="text-center">請輸入你的支出</h4>
        <h6>* 為必填欄位</h6>
        <form action="/records/{{ record._id }}?_method=PUT" method="POST">
          <div class="form-group">
            <label for="name">* 名稱 :</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="請輸入名稱" value="{{ record.name }}">
          </div>
          <div class="form-group">
            <label for="date">* 日期 :</label>
            <input type="date" id="date" name="date" class="form-control" value="{{ record.date }}">
          </div>
          <div class="form-group">
            <label for="category">* 類別 :</label>
            <div class="input-group">
              <select class="form-control" name="category">
                <option {{#ifEqual record.category '餐飲食品'}}selected{{/ifEqual}}>餐飲食品</option>
                <option {{#ifEqual record.category '交通出行'}}selected{{/ifEqual}}>交通出行</option>
                <option {{#ifEqual record.category '家居物業'}}selected{{/ifEqual}}>家居物業</option>
                <option {{#ifEqual record.category '休閒娛樂'}}selected{{/ifEqual}}>休閒娛樂</option>
                <option {{#ifEqual record.category '其他'}}selected{{/ifEqual}}>其他</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="merchant">商家 :</label>
            <input type="text" id="merchant" name="merchant" class="form-control" placeholder="請輸入商家名稱"
              value="{{ record.merchant }}">
          </div>
          <div class="form-group">
            <label for="amount">* 金額 :</label>
            <input type="text" id="amount" name="amount" class="form-control" placeholder="請輸入金額"
              value="{{ record.amount }}">
          </div>
          <button type="submit" class="btn btn-outline-success btn-block">修改支出</button>
          <a href="/" class="btn btn-outline-secondary mt-2 btn-block">返回</a>
        </form>
      </div>
    </div>
  </div>
</div>